<body>
    <script>
    let out = "";
    for(let i = 1; i <= 10; i++){
        for(let j = 0; j < i; j++){
            out = out + "* ";
        }
        out = out + "\n";
    }
    console.log(out);


    let num = '';
    for(let i = 1; i <= 10; i++){
        for(let j = 0; j < i; j++){

            if(i%2==0){
            num = num + '1 ';
            }
            else{
                num = num + '0 ';
            }
        }
        num = num + "\n";
    }
    console.log(num);

</script>
</body>
</html>
